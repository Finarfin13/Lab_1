package lab1_finarfin;

/**
 *
 * @author Finarfin
 */
public class Lab1_Finarfin {

    /**
     * @param args the command line arguments
     */
    public static void main(String[] args) {
        System.out.println("Bienvenido al programa de Finarfin");
        System.out.println("1. Calculadora");
        System.out.println("Elija la operacion que desea realizar "
                + "1.Suma; 2. resta; 3. Multiplicacion; 4. Division ");
        Scanner as = new Scanner(System.in);
        int a = as.nextInt();

        if (a <= 0 || a > 4) {
            System.out.println("Entrada no valida");
        }

        if (a == 1) {
            System.out.println("Usted ha elegido sumar");
            System.out.println("Ingrese el primer sumando");
            Scanner sd = new Scanner(System.in);
            int b = sd.nextInt();

            System.out.println("Ingrese el segundo sumando");
            Scanner df = new Scanner(System.in);
            int c = df.nextInt();

            System.out.println("La suma: " + (b) + "+" + (c) + "=" + (b + c));
        }
        if (a == 2) {
            System.out.println("Usted ha elegido restar");
            System.out.println("Ingrese el minuendo");
            Scanner sd = new Scanner(System.in);
            int d = sd.nextInt();

            System.out.println("Ingrese el sustraendo");
            Scanner df = new Scanner(System.in);
            int e = df.nextInt();

            System.out.println("La resta: " + (d) + "-" + (e) + "=" + (d - e));
        }
        if (a == 3) {
            System.out.println("Usted ha elegido multiplicar");
            System.out.println("Ingrese el primer factor");
            Scanner sd = new Scanner(System.in);
            int f = sd.nextInt();

            System.out.println("Ingrese el segundo factor");
            Scanner df = new Scanner(System.in);
            int g = df.nextInt();

            System.out.println("La multiplicacion: " + (f) + "*"
                    + (g) + "=" + (f * g));

        }
        if (a == 4) {
            System.out.println("Usted ha elegido dividir");
            System.out.println("Ingrese el dividendo");
            Scanner sd = new Scanner(System.in);
            int h = sd.nextInt();

            System.out.println("Ingrese el divisor");
            Scanner df = new Scanner(System.in);
            int i = df.nextInt();

            System.out.println("La division: " + (h) + "/" + (i)
                    + "=" + (h / i));
        }
        System.out.println("2. Edad");
        System.out.println("Favor ingrese su edad");
        Scanner fg = new Scanner(System.in);
        int j = fg.nextInt();
        System.out.println("Su edad es: " + (j) + " a√±os.");

        if (j < 18) {
            System.out.println("Usted es menor de edad.");
        }

        if (j >= 18) {
            System.out.println("Usted es mayor de edad.");
        }
    }
}
